/* /////////////////////////////////////////////////////////////////////////////////////////////////
Left Side - Download Options */
[objectName^="left_widget"]  {
	background-color: red; /* rgb(40, 44, 52); */
	border: 1px solid rgb(2, 2, 2);
	text-align: left;
	padding-left: 44px;
	color: rgb(0, 0, 0);
}

#main_window .QWidget {
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
	text-align: left;
	padding-left: 44px;
	color: white;
}

#left_widget .QPushButton#button1,#button2,#button3,#button4{
	background-color: #000000;
	color: #ffffff;
	border: 1px solid #ffffff;
	border-radius: 5px;
}

#left_widget .QPushButton#button1:hover,#button2:hover,#button3:hover,#button4:hover {
	background-color: rgb(40, 44, 52);
	color: red;
}

#checklists_widget > QPushButton {
	color: #ffffff;
}

#checklists_widget > QPushButton:hover {
	color: red;
}

QFrame[objectName^="left_menu_frame"] {
	background-color: rgb(38, 38, 38);
	border: 1px solid rgb(38, 38, 38);
    border-radius: 0px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
	text-align: left;
	color: white;
}

QFrame[objectName^="left_menu_frame"] QPushButton {
	background-color: rgb(38, 38, 38); /* background-color: transparent; */
	text-align: center;
}

QFrame[objectName^="left_menu_frame"] QPushButton:hover {
	background-color: rgb(48, 48, 48); /* background-color: transparent; */
	text-align: center;
	color: red;
}

QFrame#title_handle_bar {
	background-color: rgb(38, 38, 38);
	border: 1px solid rgb(38, 38, 38);
	text-align: left;
	color: white;
}

QFrame#title_bar {
	background-color: rgb(38, 38, 38);
	border: 1px solid rgb(38, 38, 38);
	text-align: left;
	color: white;
	min-height: 30px;
	max-height: 30px;
}

QScrollArea#left_scroll_area {
	background-color: rgb(38, 38, 38);
	border: 1px solid rgb(38, 38, 38);
	text-align: left;
	color: white;
}

