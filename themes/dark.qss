/* /////////////////////////////////////////////////////////////////////////////////////////////////
QMainWindow Options */
QMainWindow {
	background-color: rgb(2, 2, 2);
	border: 1px solid rgb(2, 2, 2);
	text-align: left;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
Settings Options */
#settings_widget * {
	color: white;
}

QComboBox {
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
	text-align: left;
	color: white;
}

QComboBox QAbstractItemView::item {
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
	text-align: left;
	color: white;
}

QComboBox QAbstractItemView::item:selected {
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
	text-align: left;
	color: red;
}

QLineEdit {
	background-color: rgb(30, 34, 42);
	border: 1px solid rgb(34, 39, 48);
	text-align: left;
	color: white;
}

#download_location_button {
	background-color: #000000;
	color: #ffffff;
	border: 1px solid #ffffff;
	border-radius: 5px;
	width: 50px;
}

QToolTip {
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
	text-align: left;
	color: white;
}

QScrollBar {
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
}

/* QScrollBar::handle:hover {
